<div class="row">
  <%= render 'shared/sidebar' %>
  
  <div class="span9">
    <%= form_for @forum, :url => account_setting_path(@forum), :html => {:class => "form-horizontal"} do |f| %>
    
      <%= render 'shared/error_messages', :target => @forum %>
    
      <fieldset>
        <legend>Customize Your Forum</legend>
        
        <div class="control-group">
          <%= f.label :name, :class => "control-label"%>
          <div class="controls"><%= f.text_field :name %></div>
        </div>
        
        <div class="control-group">
          <%= f.label :description, :class => "control-label"%>
          <div class="controls"><%= f.text_area :description, :class => 'span6', :style => "height: 80px;" %></div>
        </div>
        
        <div class="control-group">
          <%= f.label :post_options, :value => "Allow submissions of", :class => "control-label"%>
          <div class="controls"><%= f.select :post_options, Forum::POST_OPTIONS.collect{|k,v| [k.to_s.humanize, v] } %></div>
        </div>
      </fieldset>
    
      <fieldset>
        <legend>Button Labels</legend>
        <div class="control-group">
          By default Ribbot uses "Posts" and "Comments".  But you can change the site wording to use "Questions" and "Answers", link submissions, or anything else you'd like.  Defaults shown on the left.
        </div>

        <% [:post_label, :posts_label, :new_post_label, :comment_label, :comments_label, :new_comment_label].each do |l| %>
          <div class="control-group">
            <%= f.label l, Forum.fields[l.to_s].default, :class => "control-label" %>
            <div class="controls"><%= f.text_field l %></div>
          </div>
        <% end %>
      </fieldset>

      <fieldset>
        <legend>Reply to Post Notification</legend>
        <div class="control-group">
          Please, set up subject and content of the reply to post e-mail notification.
        </div>

        <div class="control-group">
          <%= f.label :reply_to_post_notification_subject, :class => "control-label" %>
          <div class="controls"><%= f.text_field :reply_to_post_notification_subject %></div>
	</div>

        <div class="control-group">
          <%= f.label :reply_to_post_notification_content, :class => "control-label" %>
	  <div class="controls"><%= f.text_area :reply_to_post_notification_content, :class => 'span6', :style => "height: 80px;" %></div>
        </div>
      </fieldset>

      <fieldset>
        <legend>Reply to Comment Notification</legend>
        <div class="control-group">
          Please, set up subject and content of the reply to comment e-mail notification.
        </div>

        <div class="control-group">
          <%= f.label :reply_to_comment_notification_subject, :class => "control-label" %>
          <div class="controls"><%= f.text_field :reply_to_comment_notification_subject %></div>
	</div>

        <div class="control-group">
          <%= f.label :reply_to_comment_notification_content, :class => "control-label" %>
	  <div class="controls"><%= f.text_area :reply_to_comment_notification_content, :class => 'span6', :style => "height: 80px;" %></div>
        </div>
      </fieldset>

      <fieldset>
        <legend>Up vote Post Notification</legend>
        <div class="control-group">
          Please, set up subject and content of the up-vote a post e-mail notification.
        </div>

        <div class="control-group">
          <%= f.label :up_vote_post_notification_subject, :class => "control-label" %>
          <div class="controls"><%= f.text_field :up_vote_post_notification_subject %></div>
	</div>

        <div class="control-group">
          <%= f.label :up_vote_post_notification_content, :class => "control-label" %>
	  <div class="controls"><%= f.text_area :up_vote_post_notification_content, :class => 'span6', :style => "height: 80px;" %></div>
        </div>
      </fieldset>

      <div class="form-actions">
        <%= submit_tag "Save Changes", :class => "btn btn-primary", :disable_with => "Saving..." %>
      </div>
    <% end %>
  </div>
</div>


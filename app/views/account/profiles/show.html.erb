<div class="row">
  <%= render 'shared/sidebar' %>
  
  <div class="span12">
    <%= form_for current_user, :url => account_profile_path, :html => {:class => "user-form"} do |f| %>
      <div class="clearfix">
        <div class="input"><h3>Edit Profile</h3></div>
      </div>
      
      <%= f.error_messages :header_message => nil %>

      <div class="clearfix">
        <%= f.label :name %>
        <div class="input"><%= f.text_field :name %></div>
      </div>
      
      <div class="clearfix">
        <%= f.label :email %>
        <div class="input"><%= f.text_field :email %></div>
      </div>
      
      <div class="clearfix">
        <%= label_tag :photo, 'Photo' %>
        <div class="input"><%= link_to 'Change here', "http://www.gravatar.com/", :target => "_blank" %></div>
      </div>
      
      <div class="clearfix">
        <%= f.label :location %>
        <div class="input"><%= f.text_field :location %></div>
      </div>
      
      <div class="clearfix">
        <%= f.label :website %>
        <div class="input"><%= f.text_field :website %></div>
      </div>
      
      <div class="clearfix">
        <%= f.label :about, 'About me' %>
        <div class="input"><%= f.text_area :about, :class => "span7" %></div>
      </div>

      <div class="actions">
        <%= submit_tag "Update Profile", :class => "btn primary", :disable_with => "Updating..." %>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; You can view your public profile <%= link_to 'here', user_path(current_user), :target => "_blank" %>.
      </div>
    <% end %>
    
    <%= form_for current_user, :url => password_reset_user_path(current_user) do %>
      <div class="clearfix">
        <div class="input"><h3>Change Password</h3></div>
      </div>

      <div class="clearfix">
        <%= label_tag :old_password %>
        <div class="input"><%= password_field_tag :old_password %></div>
      </div>
      
      <div class="clearfix">
        <%= label_tag :password %>
        <div class="input"><%= password_field_tag :password %></div>
      </div>
      
      <div class="clearfix">
        <%= label_tag :password_confirmation %>
        <div class="input"><%= password_field_tag :password_confirmation %></div>
      </div>

      <div class="actions">
        <%= submit_tag "Reset Password", :class => "btn primary", :disable_with => "Reseting..." %>
      </div>
    <% end %>
    
  </div>
</div>
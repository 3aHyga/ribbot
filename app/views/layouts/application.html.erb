<!DOCTYPE html>
<html>
<head>
  <title>Impact Entrepreneurship Group</title>
  <meta name="Description" content="<%= meta_description %>">
  <link rel="shortcut icon" href="/favicon.ico" />
  <%= stylesheet_link_tag "application" %>
  <%= stylesheet_link_tag theme_path(current_theme) if current_theme.present? %>


  <%= csrf_meta_tags %>
  <script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-467949-12']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
</head>
<body class="<%= controller_name %> <%= action_name %>">
  <% if current_user and current_user.superuser? %>
    <div class="admin-link">
      <%= link_to "Admin", superuser_forums_path %>
    </div>
  <% end %>

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>

        <%= link_to site_name, root_path, :class => "brand" %>

        <div class="nav-collapse">
            <ul class="nav">
              <%= render 'pages/header' %>
            </ul>

          <ul class="nav pull-right">
            <% if signed_in? %>
              <% if current_forum %>
                <li class="dropdown" data-dropdown="dropdown">
                  <%= link_to "#{current_user.name} <b class='caret'></b>".html_safe, '#', :class => "dropdown-toggle", :'data-toggle' => 'dropdown' %>
                  <ul class="dropdown-menu">
                    <li><%= link_to "My Profile", account_comments_path, :style => "padding:10px 10px 11px" %></li>
                    <% if can? :edit, current_forum %>
                      <li><%= link_to "Forum Settings", account_settings_path, :style => "padding:10px 10px 11px" %></li>
                    <% end %>
                    <li class="divider"></li>
                    <li><%= link_to "Sign Out", signout_path, :method => :delete, :style => "padding:10px 10px 11px" %></li>
                  </ul>
                </li>
              <% else %>
                <li><%= link_to "Sign Out", signout_path, :method => :delete %></li>
              <% end %>
            <% else %>
              <li class="<%= "active" if signin_active? %>"><%= link_to "Sign In or Sign Up", signin_path %></li>

            <% end %>
          </ul>

        </div>
      </div>
    </div>
  </div>

  <%= render 'shared/flashy' %>

  <div class="container">
    <% if @sidebar %>
      <div class="page-header">
        <h1><%= current_forum.name %> <small><%= current_forum.slogan %></small></h1>
      </div>
      <div class="row">
        <%= render 'shared/sidebar' %>
        <div class="span10">
          <%= yield %>
        </div>
      </div>
    <% else %>
      <%= yield %>
    <% end %>

    <footer>
      <div style="padding:10px;margin-bottom:30px;font-size:14px;width:500px;float:left;">
	  <a href="/?tags=Breaking+News" style="color:#333">Breaking News</a>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;<a href="/?tags=Start-Up+Jobs" style="color:#333">Jobs</a>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;<a href="/?tags=Start-Up+Events" style="color:#333">Events</a>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;<a href="/?tags=Inspirational+Quotes+%26+Stories" style="color:#333">Inspiration</a>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;<a href="/?tags=Resources" style="color:#333">Resources</a>
	  </div>
	  <div style="padding:10px;margin-bottom:30px;width:350px;float:right;" align="right">
	  Copyright 2004-2012 Impact Entrepreneurship Group
	  </div>
    </footer>
  </div>

  <%= javascript_include_tag "application" %>

  <script type="text/javascript">
    $(document).ready(function() {
      <%= yield :javascript_footer %>
    });
  </script>
  <script type="text/javascript">
  var uvOptions = {};
  (function() {
    var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true;
    uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/34CHn8husljVevFYYVHXA.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(uv, s);
  })();
</script>
</body>
</html>
